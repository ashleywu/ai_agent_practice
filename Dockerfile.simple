# Simpler Dockerfile for testing
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci --verbose

# Copy all files
COPY . .

# Set environment (don't set NODE_ENV=production during build)
ENV NEXT_TELEMETRY_DISABLED=1

# Build with verbose output - show all output
RUN npm run build

# Set production environment for runtime
ENV NODE_ENV=production

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
